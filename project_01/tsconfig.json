{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src", // コンパイルするソースファイルがあるディレクトリ
    "outDir": "./dist", // コンパイル後の出力先ディレクトリ

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "commonjs", //moduleにcommonjsを入れておくと、Node.jsで動作する(比較的バックエンド用か)https://zenn.dev/hayato94087/articles/97c66f7675cd01
    "target": "esnext",
    "types": [],
    // For nodejs:
    // "lib": ["esnext"],
    // "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style Options (以下のコメントアウトされているオプションは個別に有効化できるが、
    // strictオプションを有効化するとまとめて有効化される)
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,    // 外部ライブラリの型定義ファイルのチェックをスキップする(外部ライブラリの型定義ファイルにエラーがあっても無視する)
    "esModuleInterop": true, // 外部ライブラリを使用する場合、記法がちがっても(=外部ライブラリがstrictに従っていなくても)動作するようにする。
    "forceConsistentCasingInFileNames": true //ファイル名の大文字小文字を厳密にチェックする
  },
  "include": ["src/**/*"], //コンパイルする対象のファイルの指定の仕方。src内の全ファイルを対象にする
  "exclude": ["node_modules", "dist"], //コンパイル対象ではないファイルの指定の仕方(project01内のこのディレクトリのファイルはコンパイルから除外される)
}
